<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="MotorDepotHibernateManager">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>entity.RequestEntity</class>
        <class>entity.TruckEntity</class>
        <class>entity.DriverEntity</class>
        <class>entity.TruckStateEntity</class>
        <class>entity.TripEntity</class>
        <class>entity.UserEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/motor_depot?useSSL=false"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="ECLIPTER"/>
            <property name="hibernate.connection.password" value="root"/>
        </properties>
    </persistence-unit>
</persistence>